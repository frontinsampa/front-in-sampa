---
const { pic, name, bio, talk, twitter, linkedin, specialClass } = Astro.props;
---

<div class={`speaker-item speaker-item--${specialClass}`}>
  <div class="speaker-content">
    <div class="speaker-photo">
      <img src={`/speakers/${pic}`} alt={name} />
    </div>
    <div class="speaker-info">
      <div class="speaker-info-inner">
        <h3 class="speaker-title">{name}</h3>
        <div>
          <p class="speaker-bio">{bio}</p>
        </div>
        {talk && <p class="speaker-talk">{talk}</p>}
        {(twitter || linkedin) &&
          <div class="speaker-social">
            {twitter && <a href={`https://twitter.com/${twitter}`} class="speaker-social-link speaker-social-link--twitter" target="_blank">Twitter</a>}
            {linkedin && <a href={linkedin} class="speaker-social-link speaker-social-link--linkedin" target="_blank">Linkedin</a>}
          </div>}
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  .speaker-item {
    position: relative;
  }

  .speaker-item:before {
    content: '';
    width: 100%;
    height: 100%;
    background: var(--color-secondary);
    position: absolute;
    display: block;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    border-radius: 50% 50% 69% 31% / 53% 57% 43% 47%;

    @media (max-width: 600px) {
      width: 98%;
    }
  }

  .speaker-item--alt:before {
    border-radius: 70% 30% 25% 75% / 50% 57% 43% 50%;
  }

  .speaker-content {
    position: relative;
    padding: 2rem;
    display: flex;
    border: 2px solid var(--color-primary);
    background-color: var(--color-secondary);
    box-shadow: 6px 6px var(--color-primary);

  }


  .speaker-photo {
    flex-basis: 30%;

    @media (max-width: 600px) {
      flex-basis: 27%;
    }
  }

  .speaker-photo img {
    max-width: 100%;
  }

  .speaker-info {
    flex: 1;
    padding-left: 2.4rem;
    display: flex;
    align-items: center;
  }

  .speaker-title {
    display: inline-block;
    padding: .2em .3em;
    font-family: var(--font-title);
    font-size: 3rem;
    margin-bottom: .4em;
    background-color: var(--color-accent-2);
    margin-left: -.5rem;

    @media (max-width: 600px) {
      font-size: 2.2rem;
    }
  }

  .speaker-bio {
    display: inline-block;
    font-family: var(--font-title);
    font-size: 1.4rem;
    margin: 0;
    color: #999;
    font-weight: bold;

    @media (max-width: 600px) {
      font-size: 1.2rem;
    }
  }

  .speaker-talk {
    font-family: var(--font-title);
    font-size: 1.8rem;
    color: var(--color-primary);
    padding-top: .4em;
    line-height: 1.5;
    margin: 0;
    font-weight: bold;

    @media (max-width: 600px) {
      font-size: 1.6rem;
      line-height: 1.3;
    }
  }

  .speaker-social {
    padding-top: 1.4rem;
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .speaker-social-link {
    --size: 1.6rem;
    display: inline-block;
    width: var(--size);
    height: var(--size);
    text-indent: -9999rem;
    font-size: 0;
    background-size: 100% auto;
    background-position: center;
    background-repeat: no-repeat;
    will-change: transform;
    transition: transform .2s ease;
  }

  .speaker-social-link:hover {
    transform: scale(1.1);
  }

  .speaker-social-link--twitter {
    --size: 1.8rem;
    background-image: url('/assets/social/twitter-color.png');
  }

  .speaker-social-link--linkedin {
    background-image: url('/assets/social/linkedin-color.png');
  }
</style>