<style lang="scss">
  .sponsors {
    position: relative;
    background-color: var(--color-secondary);
    padding: 6rem 0 2rem;

    @media (max-width: 768px) {
      padding: 4rem 0 0;
    }
  }

  .sponsors-main {
    max-width: var(--wrapper-medium);
    width: 100%;
    margin: 0 auto;
    padding: 0 3rem;
  }

  .sponsors-content,
  .sponsors-content--footer {
    text-align: center;
  }

  .sponsors-content--footer {
    margin-bottom: 8rem;
  }

  .sponsors-disclaimer {
    padding: 5rem 0 7rem;
    color: #555;
    text-align: center;

    @media (max-width: 800px) {
      padding: 3rem 0 6rem;
    }
  }

  .sponsors-disclaimer-box {
    max-width: 80rem;
    margin: 0 auto;
    padding-bottom: 10rem;
    margin-top: -3rem;
  }

  .sponsors-disclaimer-text {
    text-align: center;
    margin: 0;
    line-height: 1.8;

    @media (max-width: 768px) {
      line-height: 2;
    }
  }

  .sponsors-disclaimer-text span {
    font-weight: bold;
    font-size: 1.6rem;
    text-transform: uppercase;
    background-color: var(--color-accent-2);
    padding: .2em .5em;
    display: inline-block;
    margin-bottom: 1.6rem;

    @media (max-width: 800px) {
      font-size: 1.4rem;
    }
  }

  .sponsors-title {
    color: var(--color-primary);
    font-size: 4rem;
    text-align: center;
    margin-bottom: 4rem;

    @media (max-width: 768px) {
      font-size: 3rem;
    }
  }

  .sponsors-list:last-child()  {
     border-bottom: none;
     margin-bottom: 0;
  }

  .sponsors-list {
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(3, 1fr);

    @media (min-width: 768px) {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .support-list {
    grid-template-columns: repeat(3, 1fr);

    @media (min-width: 768px) {
      gap: 1rem;
      grid-template-columns: repeat(6, 1fr);
    }
  }

  .support-list,
  .sponsors-list {
    gap: .5rem;
    justify-content: center;
    display: grid;
    margin-bottom: 6rem;

    @media (min-width: 768px) {
      gap: 1rem;
    }
  }

  .sponsors-item {
    height: 100%;
  }

  .sponsors-item:nth-child(1) {
    grid-column: 1/5;
    grid-row: 1/3;

    @media (min-width: 768px) {
      grid-column: 1/3;
      grid-row: 1/4;
    }
  }

  .sponsors-item:nth-child(2) {
    grid-column: 5/7;
    grid-row: 1/3;
    max-height: 300px;

    @media (min-width: 768px) {
      grid-column: 3/5;
      grid-row: 1/3;
    }
  }

  .sponsors-item:nth-child(n+3) {
    grid-column: span 3;

    @media (min-width: 768px) {
      grid-column: auto;
    }
  }
</style>
